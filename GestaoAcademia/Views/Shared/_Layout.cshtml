@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestao Academia</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <nav>
            <div class="nav-wrapper grey darken-3 body-content">
                <a href="#" class="brand-logo"><i class="large material-icons">fitness_center</i>Fichas de academia</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Administradores" asp-action="Login">Login</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Objetivos" asp-action="Index">Objetivos</a></li>
                        <li><a asp-controller="Exercicios" asp-action="Index">Exercicios</a></li>
                        <li><a asp-controller="CategoriasExercicios" asp-action="Index">Categorias</a></li>
                        <li><a asp-controller="Professores" asp-action="Index">Professores</a></li>
                        <li><a asp-controller="Alunos" asp-action="Index">Alunos</a></li>
                        <li>Bem vindo, @HttpContextAccessor.HttpContext.Session.GetString("Usuario")</li>
                        <li><a asp-controller="Administradores" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GestaoAcademia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/materialize/js/materialize.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
